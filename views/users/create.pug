extends ../layout/common

block content
  h1 Add User
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/create", method="POST", enctype="multipart/form-data")
    b Name
    input.form-control(name="name",type="text", value= values ? values.name : '')
    b Email
    input.form-control(name="email",type="text", value= values ? values.email : '')
    b Password
    input.form-control(name="password",type="password", value= values ? values.password : '')
    b Avatar
    input.form-control(name="avatar",type="file")
    button.btn.btn-success Create